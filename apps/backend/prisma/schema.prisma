generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  picture   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rooms            Room[]
  participants     Participant[]
  joinRequests     RoomJoinRequest[]
  sentMessages     ChatMessage[]     @relation("SentMessages")
  receivedMessages ChatMessage[]     @relation("ReceivedMessages")
  controlStates    RoomControlState[]

  @@index([email])
}

model Room {
  id          String   @id @default(uuid())
  roomCode    String   @unique
  name        String?
  adminId     String
  admin       User     @relation(fields: [adminId], references: [id])
  isPublic    Boolean  @default(true)
  isActive    Boolean  @default(true)
  maxParticipants Int  @default(50)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  endedAt     DateTime?

  participants    Participant[]
  metrics         CallMetrics[]
  joinRequests    RoomJoinRequest[]
  chatMessages    ChatMessage[]
  controlStates   RoomControlState[]
  hostState       RoomHostState?

  @@index([roomCode])
  @@index([adminId])
}

model Participant {
  id        String   @id @default(uuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  joinedAt  DateTime @default(now())
  leftAt    DateTime?
  role      String   @default("participant") // "admin" | "participant"
  audioMuted     Boolean   @default(true)
  videoMuted     Boolean   @default(true)
  audioMutedAt   DateTime?
  videoMutedAt   DateTime?

  @@unique([roomId, userId, joinedAt])
  @@index([roomId])
  @@index([userId])
}

model CallMetrics {
  id              String   @id @default(uuid())
  roomId          String
  room            Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId          String
  timestamp       DateTime @default(now())
  bitrate         Int?
  packetLoss      Float?
  jitter          Float?
  rtt             Int?
  resolution      String?
  fps             Int?

  @@index([roomId, timestamp])
  @@index([userId, timestamp])
}

model RoomJoinRequest {
  id          String   @id @default(uuid())
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  requestedAt DateTime @default(now())
  status      String   @default("pending") // "pending" | "approved" | "rejected"
  respondedAt DateTime?

  @@unique([roomId, userId])
  @@index([roomId, status])
  @@index([userId])
}

model RoomControlState {
  id            String   @id @default(uuid())
  roomId        String
  room          Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  forcedAudio   Boolean  @default(false)
  forcedVideo   Boolean  @default(false)
  forcedAudioAt DateTime?
  forcedVideoAt DateTime?
  forcedBy      String?
  forcedReason  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([roomId, userId])
  @@index([roomId])
  @@index([userId])
  @@index([forcedBy])
}

model RoomHostState {
  id             String   @id @default(uuid())
  roomId         String   @unique
  room           Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  locked         Boolean  @default(false)
  lockedBy       String?
  lockedAt       DateTime?
  lockedReason   String?
  audioForceAll  Boolean  @default(false)
  audioForcedBy  String?
  audioForcedAt  DateTime?
  audioForceReason String?
  videoForceAll  Boolean  @default(false)
  videoForcedBy  String?
  videoForcedAt  DateTime?
  videoForceReason String?
  chatForceAll   Boolean  @default(false)
  chatForcedBy   String?
  chatForcedAt   DateTime?
  chatForceReason String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([locked])
  @@index([audioForceAll])
  @@index([videoForceAll])
  @@index([chatForceAll])
}

enum ChatMessageType {
  BROADCAST
  DIRECT
  SYSTEM
}

model ChatMessage {
  id           String          @id @default(uuid())
  roomId       String
  room         Room            @relation(fields: [roomId], references: [id], onDelete: Cascade)
  senderId     String
  sender       User            @relation("SentMessages", fields: [senderId], references: [id])
  recipientId  String?
  recipient    User?           @relation("ReceivedMessages", fields: [recipientId], references: [id])
  content      String
  messageType  ChatMessageType @default(BROADCAST)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  @@index([roomId, createdAt])
  @@index([roomId, messageType])
  @@index([senderId, createdAt])
  @@index([recipientId, createdAt])
}

