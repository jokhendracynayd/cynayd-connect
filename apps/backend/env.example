# Environment
NODE_ENV=development

# Server Ports
PORT=3000
SIGNALING_PORT=4000

# Database
DATABASE_URL=postgresql://nothing:nothing@localhost:5432/connect_sdk

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=15

# Mediasoup
# For local development: Leave empty or set to 'auto' to auto-detect IP
# For production: Set to your public IP address or domain name (e.g., '203.0.113.1' or 'mediasoup.example.com')
# For Docker/VMs: Set to the host's public IP address
# IMPORTANT: If connecting from remote clients, this MUST be set to the public IP
MEDIASOUP_ANNOUNCED_IP=
MEDIASOUP_RTC_MIN_PORT=2000
MEDIASOUP_RTC_MAX_PORT=2420

# Optional: STUN/TURN servers (if using external TURN server for NAT traversal)
# Format: "stun:stun.example.com:3478" or "turn:turn.example.com:3478?transport=udp"
# MEDIASOUP_STUN_SERVERS=
# MEDIASOUP_TURN_SERVERS=

